<?xml version="1.0"?>
<robot name="fifth_robot" xmins:xacro="http://www.ros.org/wiki/xacro">
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="1 0.1 0.2" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="1 0.1 0.2" />
      </geometry>
    </collision>
    <material name="white" />
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>

  <joint name="to_wheel_left" type="continuous">
    <parent link="base_link" />
    <child link="left_wheel" />
    <axis xyz="0 -1 0" />
    <origin xyz="0 -1 0" />
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <box size="0.2 0.1 0.2" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.1 0.2" />
      </geometry>
    </collision>
    <material name="blue" />
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>

  <joint name="to_wheel_right" type="continuous">
    <parent link="base_link" />
    <child link="right_wheel" />
    <axis xyz="0 1 0" />
    <origin xyz="0 1 0" />
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <box size="0.2 0.1 0.2" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.1 0.2" />
      </geometry>
    </collision>
    <material name="blue" />
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
    </inertial>
  </link>
</robot>
